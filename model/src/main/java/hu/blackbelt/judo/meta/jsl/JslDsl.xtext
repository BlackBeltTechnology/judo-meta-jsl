//	;

EntityMapDeclaration
	: '(' entity = [EntityDeclaration | ModelName] Named ')'  // if no name defined, the 'self' shall be default name
	| KW_MAPS entity = [EntityDeclaration | ModelName] KW_AS Named
	;


/****************************
 *	Query
 ****************************/

QueryDeclaration
	: KW_QUERY (referenceType = [SingleType | ModelName] Cardinality?) Named
	  ('(' (parameters += QueryParameterDeclaration (',' parameters += QueryParameterDeclaration)*)? ')')
	  "<=" expression = Expression
	  SC
	;

QueryParameterDeclaration
	: referenceType = [PrimitiveDeclaration | ModelName] Named ("=" default = Expression)?
	;

/****************************
 *	Return
 ****************************/

ReturnDeclaration
	: {ReturnDeclaration} CONST_VOID?
	| referenceTypes += [TransferDeclaration | ModelName]
	| '<' referenceTypes += [TransferDeclaration | ModelName] ("|" referenceType += [TransferDeclaration | ModelName])+ '>'
	;

/****************************
 *	Transfer
 ****************************/

//Transferable
//	: TransferDeclaration
//	| PrimitiveDeclaration
//	;

TransferDeclaration
	: {TransferDeclaration}
	  annotations += AnnotationMark*
	  KW_TRANSFER Named
	  map = EntityMapDeclaration?
	  (automap ?= SC | BLOCK_START members += TransferMemberDeclaration* BLOCK_END)
	;

TransferMemberDeclaration
	: TransferConstructorDeclaration
	| TransferDestructorDeclaration
	| TransferInitializerDeclaration
	
	| TransferDataMemberDeclaration

	| TransferActionDeclaration
	| TransferSubmitDeclaration
	;

TransferDataMemberDeclaration
	: TransferFieldDeclaration
	| TransferRelationDeclaration
	;

TransferDestructorDeclaration
	: {TransferGetDeclaration}
	  FEAT_DESTRUCTOR
	  (SC | BLOCK_START BLOCK_END)
	;

TransferConstructorDeclaration
	: {TransferConstructorDeclaration}
	  FEAT_CONSTRUCTOR
	  (SC | BLOCK_START (defaults += TransferDefault)* BLOCK_END)
	;

TransferInitializerDeclaration
	: {TransferInitializerDeclaration}
	  FEAT_INITIALIZER
	  (SC | BLOCK_START BLOCK_END)
	;

TransferDefault
	: member = TransferDataMember '=' rightValue = Expression SC
	;

TransferDataMember
	: 'self' '.' reference = [TransferDataMemberDeclaration | ModelName]
	;

TransferFieldDeclaration
	: annotations += AnnotationMark*
	  FEAT_FIELD  required ?= ATTR_REQUIRED? referenceType = [PrimitiveDeclaration | ModelName] Named
	  ((maps ?= '<=>' | reads ?= '<=') expression = Expression)?
	  SC
	;

TransferRelationDeclaration
	: annotations += AnnotationMark*
	  FEAT_RELATION referenceType = [TransferDeclaration | ModelName] Cardinality? Named ((maps ?= '<=>' | reads ?= '<=') expression = Expression)?
	  (choices = TransferChoiceModifier?)
	  SC
	;

TransferSubmitDeclaration
	: annotations += AnnotationMark*
	  FEAT_SUBMIT return = ReturnDeclaration Named
	  SC
	;

TransferActionDeclaration
	: annotations += AnnotationMark*
	  FEAT_ACTION return = ReturnDeclaration Named
	  '(' (parameterType = [TransferDeclaration | ModelName] paramaterName = JSLID)? ')'
	  SC
	;

/****************************
 *	View
 ****************************/

ViewDeclaration returns TransferDeclaration
	: {ViewDeclaration}
	  annotations += AnnotationMark*
	  KW_VIEW Named
	  map = EntityMapDeclaration?
	  (automap ?= SC | BLOCK_START members += ViewMemberDeclaration* BLOCK_END)
	;

ViewMemberDeclaration returns TransferMemberDeclaration
	: TransferConstructorDeclaration
	| TransferDestructorDeclaration
	| TransferInitializerDeclaration

	| ViewTextDeclaration
	| ViewFieldDeclaration
	| ViewLinkDeclaration
	| ViewTableDeclaration
	
	| ViewSubmitDeclaration
	| ViewActionDeclaration

	| ViewGroupDeclaration
	| ViewTabsDeclaration
	;

//ViewDefault
//	: field = ViewField '=' rightValue = Expression SC
//	;
//
//ViewField
//	: 'self' '.' declaration = [ViewFieldDeclaration | ModelName]
//	;

ViewTabsDeclaration
	: {ViewTabsDeclaration}
	  annotations += AnnotationMark*
	  FEAT_TABS tag = JSLID
	  ( label = LabelModifier?
	  & icon = IconModifier?
	  & enabled = EnabledModifier?
	  & ^hidden = HiddenModifier?
	  & width = WidthModifier?
	  & frame = FrameModifier?)
	  BLOCK_START (members += ViewGroupDeclaration)* BLOCK_END
	;

ViewGroupDeclaration
	: {ViewGroupDeclaration} 
	  annotations += AnnotationMark*
	  FEAT_GROUP tag = JSLID
	  ( (horizontal = HorizontalModifier | vertical = VerticalModifier)?
	  & label = LabelModifier?
	  & icon = IconModifier?
	  & enabled = EnabledModifier?
	  & ^hidden = HiddenModifier?
	  & width = WidthModifier?
	  & frame = FrameModifier?)
	  BLOCK_START (members += ViewMemberDeclaration)* BLOCK_END
	;

HorizontalModifier
	: ATTR_HORIZONTAL ':' (left ?= CONST_LEFT | right ?= CONST_RIGHT | center ?= CONST_CENTER)
	;

VerticalModifier
	: ATTR_VERTICAL ':' (top ?= CONST_TOP | bottom ?= CONST_BOTTOM | center ?= CONST_CENTER | stretch ?= CONST_STRETCH)
	;

ViewTextDeclaration returns TransferFieldDeclaration
	: {ViewTextDeclaration}
	  annotations += AnnotationMark*
	  FEAT_TEXT Named reads ?= '<=' expression = Expression
	  ( label = LabelModifier?
	  & icon = IconModifier?
	  & ^hidden = HiddenModifier?
	  & width = WidthModifier?)
	  SC
	;

ViewFieldDeclaration returns TransferFieldDeclaration
	: {ViewFieldDeclaration}
	  annotations += AnnotationMark*
	  FEAT_FIELD  required ?= ATTR_REQUIRED? referenceType = [PrimitiveDeclaration | ModelName] Named
	  ((maps ?= '<=>' | reads ?= '<=') getterExpr = Expression)?
	  ( label = LabelModifier?
	  & icon = IconModifier?
	  & enabled = EnabledModifier?
	  & ^hidden = HiddenModifier?
	  & width = WidthModifier?)
	  SC
	;

//TransferFieldDeclaration
//	: annotations += AnnotationMark*
//	  FEAT_FIELD  required ?= ATTR_REQUIRED? referenceType = [PrimitiveDeclaration | ModelName] Named
//	  ((maps ?= '<=>' | reads ?= '<=') expression = Expression)?
//	  SC
//	;

ViewLinkDeclaration returns TransferRelationDeclaration
	: {ViewLinkDeclaration}
	  annotations += AnnotationMark*
	  FEAT_LINK required ?= ATTR_REQUIRED? referenceType = [ViewDeclaration | ModelName] Named
	  ((maps ?= '<=>' | reads ?= '<=') getterExpr = Expression)?
	  ( choices = ViewChoiceModifier?
	  & create = CreateActionModifier?
	  & text = TextModifier?
	  & label = LabelModifier?
	  & icon = IconModifier?
	  & enabled = EnabledModifier?
	  & ^hidden = HiddenModifier?
	  & width = WidthModifier?)
	  SC
	;

ViewTableDeclaration returns TransferRelationDeclaration
	: {ViewTableDeclaration}
	  annotations += AnnotationMark*
	  FEAT_TABLE referenceType = [RowDeclaration | ModelName] Cardinality Named
	  ((maps ?= '<=>' | reads ?= '<=') getterExpr = Expression)?
	  ( choices = ViewChoiceModifier?
	  & create = CreateActionModifier?
	  & rows = RowsModifier?
	  & label = LabelModifier?
	  & icon = IconModifier?
	  & enabled = EnabledModifier?
	  & ^hidden = HiddenModifier?
	  & width = WidthModifier?)
	  SC
	;

ViewSubmitDeclaration returns TransferSubmitDeclaration
	: {ViewSubmitDeclaration}
	  annotations += AnnotationMark*
	  FEAT_SUBMIT return = ReturnDeclaration Named
	  ( label = LabelModifier?
	  & icon = IconModifier?
	  & enabled = EnabledModifier?
	  & ^hidden = HiddenModifier?
	  & width = WidthModifier?
	  & resource = ResourceModifier?)
	  SC
	;

ViewActionDeclaration returns TransferActionDeclaration
	: {ViewActionDeclaration}
	  annotations += AnnotationMark*
	  FEAT_ACTION return = ReturnDeclaration Named
	  '(' (parameterType = [ViewDeclaration | ModelName] paramaterName = JSLID)? ')'
	  ( label = LabelModifier?
	  & icon = IconModifier?
	  & enabled = EnabledModifier?
	  & ^hidden = HiddenModifier?
	  & width = WidthModifier?
	  & resource = ResourceModifier?)
	  SC
	;

ResourceModifier
	: FEAT_RESOURCE ':' value = [ActorAccessDeclaration | ModelName]
	;

LabelModifier
	: ATTR_LABEL ':' value = StringLiteral
	;

IconModifier
	:  ATTR_ICON ':' value = StringLiteral
	;	

FrameModifier
	: ATTR_FRAME ':' expression = Expression
	;	
	
EnabledModifier
	: ATTR_ENABLED ':' expression = Expression
	;

HiddenModifier
	: ATTR_HIDDEN ':' expression = Expression
	;

WidthModifier
	: ATTR_WIDTH ':' value = Natural
	;

RowsModifier
	: ATTR_ROWS ':' value = Natural
	;

TransferChoiceModifier
	: ATTR_CHOICES ':' expression = Expression
	;

ViewChoiceModifier returns TransferChoiceModifier
	: ATTR_CHOICES ':' rows = [RowDeclaration | ModelName] '[]' '(' expression = Expression ')'
	;


TextModifier
	: FEAT_TEXT ':' expression = Expression
	;

CreateActionModifier
	: ATTR_CREATE ':' view = [ViewDeclaration | ModelName]
	;

DetailModifier
	: ATTR_DETAIL ':' view = [ViewDeclaration | ModelName]
	;

